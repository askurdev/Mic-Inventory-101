{
  "services": {
    "product": {
      "url": "http://localhost:3006",
      "routes": [
        {
          "path": "/products",
          "methods": ["get", "post"]
        },
        {
          "path": "/products/:id",
          "methods": ["get"]
        }
      ]
    },

    "inventory": {
      "url": "http://localhost:3005",
      "routes": [
        {
          "path": "/inventories/:id",
          "methods": ["put"]
        },
        {
          "path": "/inventories/:id/details",
          "methods": ["get"]
        }
      ]
    }
  }
}
